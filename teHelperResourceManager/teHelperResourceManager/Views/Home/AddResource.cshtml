@using teHelperResourceManager.Models;
@model NewResourceKeywordViewModel

@{
    ViewBag.Title = "Add a New Resource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <h2>Add a New Resource</h2>
        @using (Html.BeginForm("AddResource", "Home", FormMethod.Post))
        {
            Html.AntiForgeryToken();

            <div class="form-group">
                @Html.LabelFor(m => m.newResource.ResourceTitle)
                @Html.TextBoxFor(m => m.newResource.ResourceTitle, new { @class = "form-control", placeHolder = "Enter new resource title" })
                @Html.ValidationMessageFor(m => m.newResource.ResourceTitle)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.newResource.ResourceContent)
                @Html.TextBoxFor(m => m.newResource.ResourceContent, new { @class = "form-control", placeHolder = "Link to resource" })
                @Html.ValidationMessageFor(m => m.newResource.ResourceContent)
            </div>

            <div class="form-group">
                @Html.Label("pathwayResource", "Type of Resource")
                @Html.RadioButtonFor(m => m.newResource.PathwayResource, true) Pathway Resource
                @Html.RadioButtonFor(m => m.newResource.PathwayResource, false) Technical Resource
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.keywordsAsString)
                @Html.TextAreaFor(m => m.keywordsAsString, new { @class = "form-control", placeHolder = "Separate keywords with comma" })
            </div>

            <button type="submit" class="btn btn-primary">Add Keyword</button>
        }
    </div>
</div>

